{
  "name": "vscode-tilt",
  "displayName": "Tilt Resource Manager",
  "description": "A VSCode extension to view and control Tilt resources",
  "publisher": "JosefBud",
  "repository": {
    "url": "https://github.com/JosefBud/vscode-tilt"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "./static/repo/vs-icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "tilt",
    "kubernetes",
    "monorepo",
    "management",
    "docker"
  ],
  "preview": true,
  "badges": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tilt-view",
          "title": "Tilt View",
          "icon": "static/vector/logo-lettermark.svg"
        }
      ]
    },
    "views": {
      "tilt-view": [
        {
          "id": "tiltViewServices",
          "name": "Services",
          "icon": "static/vector/logo-lettermark.svg",
          "contextualTitle": "Tilt Services"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tiltViewServices",
        "contents": "Unable to connect to your Tilt server.\nMake sure you've configured the extension with your hostname and port."
      }
    ],
    "commands": [
      {
        "command": "vscode-tilt.restartResource",
        "icon": "$(refresh)",
        "title": "Restart resource"
      },
      {
        "command": "vscode-tilt.disableResource",
        "icon": "$(close)",
        "title": "Disable resource"
      },
      {
        "command": "vscode-tilt.enableResource",
        "icon": "$(play)",
        "title": "Enable resource"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vscode-tilt.disableResource",
          "when": "view == tiltViewServices && viewItem == resourceEnabled",
          "group": "inline"
        },
        {
          "command": "vscode-tilt.enableResource",
          "when": "view == tiltViewServices && viewItem == resourceDisabled",
          "group": "inline"
        },
        {
          "command": "vscode-tilt.restartResource",
          "when": "view == tiltViewServices && viewItem == resourceEnabled",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "VSCode Tilt Extension",
      "type": "object",
      "properties": {
        "vscode-tilt.tiltServerHostname": {
          "type": "string",
          "default": "localhost",
          "description": "Hostname where the Tilt server is running, for example 'localhost' or 'www.example.com'"
        },
        "vscode-tilt.tiltServerPort": {
          "type": "number",
          "default": 10350,
          "description": "Port that the Tilt server is communicating on, for example 10350"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "node --require ts-node/register --test **/*.spec.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.18.3",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "undici-types": "^7.16.0"
  },
  "dependencies": {
    "zod": "^4.0.17"
  }
}
